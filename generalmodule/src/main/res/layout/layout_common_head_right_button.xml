<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_head_height"
    android:background="@color/home_head_bg">

    <ImageView
        android:id="@id/back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:background="@drawable/button_pressed_bg_change"
        android:src="@mipmap/common_back" />

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/common_head_txt_size" />

    <ImageView
        android:id="@id/title_right_button"
        android:layout_width="@dimen/top_right_btn_size"
        android:layout_height="@dimen/top_right_btn_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_pressed_bg_change"
        android:src="@mipmap/add"
        android:visibility="visible" />

</RelativeLayout>